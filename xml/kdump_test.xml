<?xml version="1.0" encoding="utf-8"?>
<config>
    <global>
        <logfileRootDir>TestResults</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <email>
            <recipients>
                <to>myboss@mycompany.com</to>
                <to>myself@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>ESXi demo Test</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>
    </global>

    <testSuites>
        <suite>
            <suiteName>kdump</suiteName>
            <suiteTests>
                <suiteTest>crash_single_core</suiteTest>
                <suiteTest>crash_smp</suiteTest>
                <!-- Only for REDHAT. Test with crashkernel=auto -->
                <suiteTest>crash_auto_size</suiteTest>
                <suiteTest>Crash_Diff_Size</suiteTest>
            </suiteTests>
        </suite>
    </testSuites>

    <testCases>
        <test>
            <testName>crash_single_core</testName>
            <setupScript>
                <file>setupscripts\change_cpu.ps1</file>
                <file>setupScripts\change_memory.ps1</file>
            </setupScript>
            <testScript>testscripts\kdump.ps1</testScript>
            <files>remote-scripts/utils.sh</files>
            <testParams>
                <param>crashkernel=256M@128M</param>
                <param>TC_COVERED=ESX-KDUMP-001</param>
                <param>VCPU=1</param>
                <param>VMMemory=4GB</param>
            </testParams>
            <RevertDefaultSnapshot>True</RevertDefaultSnapshot>
            <timeout>600</timeout>
            <onError>Continue</onError>
            <noReboot>False</noReboot>
        </test>

        <test>
            <testName>crash_smp</testName>
            <setupScript>
                <file>setupscripts\change_cpu.ps1</file>
                <file>setupScripts\change_memory.ps1</file>
            </setupScript>
            <testScript>testscripts\kdump.ps1</testScript>
            <files>remote-scripts/utils.sh</files>
            <testParams>
                <param>crashkernel=256M@128M</param>
                <param>TC_COVERED=ESX-KDUMP-002</param>
                <param>VCPU=2</param>
                <param>VMMemory=4GB</param>
            </testParams>
            <RevertDefaultSnapshot>True</RevertDefaultSnapshot>
            <timeout>600</timeout>
            <onError>Continue</onError>
            <noReboot>False</noReboot>
        </test>

        <test>
            <testName>crash_auto_size</testName>
            <setupScript>
                <file>setupscripts\change_cpu.ps1</file>
                <file>setupScripts\change_memory.ps1</file>
            </setupScript>
            <testScript>testscripts\kdump.ps1</testScript>
            <files>remote-scripts/utils.sh</files>
            <testParams>
                <param>crashkernel=auto</param>
                <param>TC_COVERED=ESX-KDUMP-003</param>
                <param>VCPU=2</param>
                <param>VMMemory=2GB</param>
            </testParams>
            <RevertDefaultSnapshot>True</RevertDefaultSnapshot>
            <timeout>600</timeout>
            <onError>Continue</onError>
            <noReboot>False</noReboot>
        </test>

        <test>
            <testName>crash_diff_size</testName>
            <setupScript>
                <file>setupscripts\change_cpu.ps1</file>
                <file>setupScripts\change_memory.ps1</file>
            </setupScript>
            <testScript>testscripts\kdump.ps1</testScript>
            <files>remote-scripts/utils.sh</files>
            <testParams>
                <!-- Minimum RAM=2GB -->
                <param>crashkernel=128M@64M</param>
                <param>TC_COVERED=ESX-KDUMP-004</param>
                <param>VCPU=4</param>
                <param>VMMemory=8GB</param>
            </testParams>
            <RevertDefaultSnapshot>True</RevertDefaultSnapshot>
            <timeout>600</timeout>
            <onError>Continue</onError>
            <noReboot>False</noReboot>
        </test>
    </testCases>

    <VMs>
        <vm>
            <hvServer>10.73.196.236</hvServer>
            <vmName>boyang_esx_rhel6</vmName>
            <os>Linux</os>
            <ipv4></ipv4>
            <sshKey>id_rsa.ppk</sshKey>
            <suite>KDUMP</suite>
        </vm>
    </VMs>

</config>
