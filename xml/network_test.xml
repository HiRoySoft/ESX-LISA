<?xml version="1.0" encoding="utf-8"?>
<config>
    <global>
        <logfileRootDir>TestResults</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <email>
            <recipients>
                <to>myboss@mycompany.com</to>
                <to>myself@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>ESXi demo Test</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>
    </global>

    <testSuites>
        <suite>
            <suiteName>NETWORK</suiteName>
            <suiteTests>
                <suiteTest>NET_Ping</suiteTest>
            </suiteTests>
        </suite>
    </testSuites>

    <testCases>
        <test>
            <testName>NET_Ping</testName>
            <setupScript>
                <files>setupscripts\change_cpu.ps1</files>
                <files>setupScripts\change_memory.ps1</files>
            </setupScript>
            <testScript>setupScripts\network.ps1</testScript>
            <testParams>
                <param>targetVMIP=10.73.199.128</param>
                <param>TC_COVERED=NETWORK-01</param>
            </testParams>
            <timeout>120</timeout>
            <onError>Continue</onError>
            <noReboot>True</noReboot>
        </test>
    </testCases>

    <VMs>
	<vm>
            <hvServer>10.73.196.236</hvServer>
            <vmName>boyang_esx_rhel6</vmName>
            <os>Linux</os>
            <ipv4></ipv4>
            <sshKey>id_rsa.ppk</sshKey>
            <suite>NETWORK</suite>
        </vm>
    </VMs>

</config>
